# 静态资源缓存控制
/news-data.json
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# CSS和JS文件可以缓存更长时间
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# 图片文件缓存策略
/*.png
  Cache-Control: public, max-age=86400
/*.jpg
  Cache-Control: public, max-age=86400
/*.svg
  Cache-Control: public, max-age=86400

# HTML文件短期缓存
/*.html
  Cache-Control: public, max-age=300